# Copy to .env (never commit real secrets)
# Azure PostgreSQL connection
PGHOST=your-server.postgres.database.azure.com
PGDB=agentdb
PGUSER=agent_user
PGPASSWORD=replace_me_securely
PGPORT=5432

# OpenAI (standard) API key
OPENAI_API_KEY=sk-your-openai-key

# --- Azure OpenAI variant (uncomment & set if using) ---
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Optional: logging / environment
APP_ENV=dev
LOG_LEVEL=INFO

LANGSMITH_TRACING="true"
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY="REMOVED_TOKEN"
LANGSMITH_PROJECT="pr-this-vector-28"
